<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">



    <TextView
        android:id="@+id/action_hilton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="36dp"
        android:text="@string/action_hilton"
        android:textSize="35dp"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/action_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="93dp"
        android:layout_marginEnd="31dp"
        android:layout_marginRight="31dp"
        android:textSize="25dp"
        android:text="@string/action_price" />

    <Button
        android:id="@+id/action_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:textSize="20dp"
        android:background="@null"
        android:text="@string/action_add"
        android:textAllCaps="false"
        android:textColor="@color/colorAccent" />
    <TextView
        android:id="@+id/action_decor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/action_add"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="194dp"
        android:text="@string/action_decor"
        android:textSize="20dp"
        android:layout_alignLeft="@+id/action_add" />

    <TextView
        android:id="@+id/action_dates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/action_add"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="154dp"
        android:text="@string/action_dates"
        android:textSize="20dp"
        android:layout_alignLeft="@+id/action_add" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/action_dates"
        android:layout_alignEnd="@+id/action_add"
        android:ems="7"
        android:inputType="date"
        android:layout_alignRight="@+id/action_add" />

    <Button
        android:id="@+id/action_book"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/action_decor"
        android:layout_alignRight="@+id/action_decor"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="61dp"
        android:layout_marginRight="61dp"
        android:layout_marginBottom="44dp"
        android:text="@string/action_book" />

    <Button
        android:id="@+id/action_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editText"
        android:layout_alignBottom="@+id/action_book"
        android:text="@string/action_back"
        android:layout_alignLeft="@+id/editText" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="64dp"
        android:layout_marginLeft="64dp"
        android:layout_marginTop="100dp"
        android:maxHeight="15sp"
        tools:srcCompat="@tools:sample/avatars" />
</RelativeLayout>